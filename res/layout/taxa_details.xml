<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical"
    android:id="@+id/RootView" >

    <TextView
        android:id="@+id/textBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ias_main"
        android:gravity="center"
        android:height="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_marginBottom="15dp" />
    
    <Button
       android:id="@+id/buttonSubmit"
       android:layout_width="fill_parent"
       android:layout_height="35dp"
       android:layout_alignParentBottom="true"
       android:background="@color/ias_main"
       android:onClick="onAddPhotoClick"
       android:text="@string/add_sighting"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:textColor="@color/white" />
    
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_above="@+id/buttonSubmit"
        android:layout_below="@+id/textBanner" >

        <LinearLayout
            android:id="@+id/layoutInnerScroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"            
            android:orientation="vertical"
            android:paddingLeft="15dp"
	        android:paddingRight="15dp" >
            
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/your_selected_image"
                android:background="@color/ias_blue"                
                android:layout_marginBottom="5dp"	     
                android:padding="1dp"
                android:visibility="gone" />      
            
            <TextView 
                android:id="@+id/textSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ias_blue"               
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
            
            <TextView
                android:id="@+id/textDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp" />
                   
        </LinearLayout>
    </ScrollView>
    
</RelativeLayout>